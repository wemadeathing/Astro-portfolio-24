---
interface Props {
  items: {
    category: string;
    tools: string[];
  }[];
}

const { items } = Astro.props;
---

<div class="grid grid-cols-1 sm:grid-cols-2 gap-x-12 gap-y-8 my-12 not-prose">
  {items.map((group) => (
    <div>
      <h4 class="text-sm font-semibold text-white/80 mb-3 uppercase tracking-wide">
        {group.category}
      </h4>
      <div class="flex flex-wrap gap-2">
        {group.tools.map((tool) => (
          <span class="px-3 py-1.5 bg-primary/15 text-white/85 rounded-full text-sm font-semibold border border-primary/30">
            {tool}
          </span>
        ))}
      </div>
    </div>
  ))}
</div>