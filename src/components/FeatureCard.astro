---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="relative overflow-hidden rounded-xl bg-white px-5 py-4 border border-zinc-200 hover:border-zinc-300 transition-colors duration-300">
  <h3 class="text-lg font-semibold mb-1.5 text-zinc-900">{title}</h3>
  <div class="text-zinc-700 text-base leading-relaxed">
    <slot />
  </div>
</div>