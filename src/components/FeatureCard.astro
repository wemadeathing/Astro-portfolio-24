---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="relative overflow-hidden rounded-xl bg-white/[0.03] px-5 py-4 border border-white/10 hover:border-white/20 transition-colors duration-300">
  <h3 class="text-lg font-semibold mb-1.5 text-white/90">{title}</h3>
  <div class="text-white/75 text-base leading-relaxed">
    <slot />
  </div>
</div>