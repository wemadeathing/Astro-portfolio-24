---
import '@fontsource/instrument-sans';
import '../styles/globals.css';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import WhatsAppWidget from '../components/WhatsAppWidget.astro';
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string;
  description?: string;
  image?: string;
  canonicalURL?: string;
  robots?: string;
}

const { 
  title,
  description = "Technical Product Designer & AI Integration Specialist. Building enterprise design systems, rapid prototypes, and AI-powered products. Designer who codes with 15+ years experience.",
  image = "/images/NS-profile-2.png",
  canonicalURL = Astro.url.href,
  robots = "index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1"
} = Astro.props;

const siteUrl = "https://www.nasifsalaam.com"; // Your actual domain
const siteName = "Nasif Salaam";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content="Technical Product Designer, AI Product Designer, Design Systems Specialist, Full-stack Designer, AI-accelerated product design, Enterprise design systems, Designer who codes, Rapid prototyping with AI, Cursor AI, Claude AI, Design to development, Nasif Salaam" />
    <meta name="author" content="Nasif Salaam" />
    <meta name="google-site-verification" content="0AkXWv8ep3tS3TRVwSrSE670DTYpn--SyBuwlz1P9H8"/>
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="manifest" href="/Web Manifest.json">
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, siteUrl)} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content={title} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:site" content="@nasifsalaam" />
    <meta property="twitter:creator" content="@nasifsalaam" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, siteUrl)} />
    <meta property="twitter:image:alt" content={title} />
    
    <!-- Additional Meta Tags -->
    <meta name="generator" content={Astro.generator} />
    <meta name="robots" content={robots} />

    <!-- Structured Data - Personal Portfolio -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Nasif Salaam", 
        "url": "https://www.nasifsalaam.com",
        "sameAs": [
          "https://linkedin.com/in/nasifsalaam",
          "https://twitter.com/nasifsalaam",
          "https://github.com/nasifsalaam"
        ],
        "jobTitle": "Technical Product Designer & AI Integration Specialist",
        "description": "Technical Product Designer specializing in enterprise design systems, AI-accelerated development, and rapid prototyping. Designer who codes with 15+ years experience building production applications."
      }
    </script>

    <ViewTransitions fallback="none" />

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-FMSF6Y2DYL"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-FMSF6Y2DYL');
    </script>
  </head>
  <body class="min-h-screen bg-background font-sans antialiased">
    <Navbar />
    <main class="page-content">
      <slot />
    </main>
    <Footer />
    
    <!-- WhatsApp Widget - appears on all pages -->
    <WhatsAppWidget 
      phoneNumber="0814623628"
      message="Hi! I'd like to discuss a project with you."
      position="bottom-right"
    />
  </body>
</html>

<script>
  // Smooth scroll behavior
  document.addEventListener('click', (e) => {
    const target = e.target as HTMLElement;
    if (target.tagName === 'A' && target.getAttribute('href')?.startsWith('#')) {
      e.preventDefault();
      const id = target.getAttribute('href')?.slice(1);
      const element = document.getElementById(id!);
      if (element) {
        element.scrollIntoView({ behavior: 'smooth' });
      }
    }
  });
</script>