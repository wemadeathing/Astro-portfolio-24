---
import { getCollection, getEntry } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';

export const prerender = true;

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

// For server-side rendering, get the project by slug
const { slug } = Astro.params;
let project: CollectionEntry<'projects'>;

if (Astro.props?.project) {
  // Static generation - use props
  project = Astro.props.project;
} else {
  // Server-side rendering - fetch by slug
  const projectEntry = await getEntry('projects', slug!);
  if (!projectEntry) {
    return Astro.redirect('/404');
  }
  project = projectEntry;
}

const { Content, headings } = await project.render();
---

<Layout title={project.data.title} description={project.data.description} image={project.data.image}>
  <article class="min-h-screen bg-background">
    <div class="container max-w-[1100px] mx-auto px-4 sm:px-6 lg:px-8 py-10 sm:py-14 pb-16">
      <div class="grid grid-cols-1 lg:grid-cols-[1fr_240px] gap-10">
        <!-- Main Content Area with Light Background -->
        <div class="rounded-2xl border border-white/10 bg-white/[0.03] shadow-sm px-6 sm:px-8 md:px-12 py-7 md:py-10">
          <Breadcrumb 
            items={[
              { label: 'Home', href: '/' },
              { label: 'Work', href: '/projects' },
              { label: project.data.title }
            ]}
          />
          <!-- Header Section -->
          <div class="mb-8">
            <h1 class="type-h1 mb-4 text-white/95">
              {project.data.title}
            </h1>
            <p class="type-lead text-white/70 mb-6">
              {project.data.description}
            </p>
            <div class="flex flex-wrap gap-2">
              {project.data.tags?.map((tag) => (
                <span class="px-3 py-1.5 bg-primary/15 text-white/85 rounded-full text-xs font-semibold border border-primary/30">
                  {tag}
                </span>
              ))}
            </div>
          </div>

          <!-- Featured Image -->
          {project.data.image && (
            <div class="rounded-xl overflow-hidden mb-12">
              <img
                src={project.data.image}
                alt={project.data.title}
                class="w-full aspect-video object-cover"
                loading="lazy"
              />
            </div>
          )}
          
          <!-- Content -->
          <div class="prose max-w-none">
            <Content />
          </div>
        </div>

        <!-- Sidebar -->
        <aside class="hidden lg:block">
          <div class="sticky top-32 rounded-2xl border border-white/10 bg-white/[0.03] p-5">
            <div class="text-xs tracking-wide uppercase text-white/60 mb-4">On this page</div>
            <ul class="space-y-1 text-sm">
              {headings.map((heading) => (
                <li>
                  <a
                    href={`#${heading.slug}`}
                    class="toc-link block rounded-lg px-2 py-1.5 text-white/70 hover:text-white/90 hover:bg-white/5 transition-colors"
                    style={`margin-left: ${(heading.depth - 1) * 1}rem`}
                  >
                    {heading.text}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        </aside>
      </div>
    </div>
  </article>
</Layout>

<style is:global>
  /* Dark-first prose styles for project pages */
  .prose {
    @apply text-base leading-7 text-white/85;
  }

  .prose h2 {
    @apply text-2xl font-semibold mt-12 mb-4 scroll-mt-32 text-white/95;
  }

  .prose h3 {
    @apply text-xl font-semibold mt-8 mb-3 scroll-mt-32 text-white/90;
  }

  .prose h4 {
    @apply text-base font-medium text-white/75 scroll-mt-32;
  }

  .prose p {
    @apply mb-6 text-white/75;
  }

  .prose ul {
    @apply my-6 list-none space-y-2;
  }

  .prose ul li {
    @apply flex items-start text-white/75;
  }

  .prose ul li::before {
    content: "â€¢";
    @apply mr-3 text-white/90 font-bold text-lg;
  }

  .prose img {
    @apply rounded-xl my-12;
  }
  
  .prose figure {
    @apply my-12;
  }
  
  .prose figure img {
    @apply my-0;
  }
  
  .prose figcaption {
    @apply text-sm text-white/60 text-center mt-4 italic;
  }

  .prose blockquote {
    @apply border-l-4 border-primary/50 pl-6 my-8 italic text-white/70;
  }

  .prose pre {
    @apply bg-black/30 border border-white/10 rounded-xl p-6 my-8 overflow-x-auto;
  }

  .prose code {
    @apply text-sm text-white/90;
  }

  .prose a {
    color: hsl(var(--primary));
    @apply underline decoration-2 underline-offset-2 transition-all;
    text-decoration-color: hsl(var(--primary) / 0.35);
  }

  .prose a:hover {
    text-decoration-color: hsl(var(--primary) / 0.95);
  }

  .prose strong {
    @apply text-white/95 font-semibold;
  }

  /* Enhanced TOC styling */
  .toc-link {
    transition: all 0.2s ease-in-out;
    position: relative;
  }

  .toc-link:hover {
    transform: translateX(4px);
  }

  .toc-link.active {
    font-weight: 500;
  }
</style>

<script>
  // Active section highlighting (project detail) - ViewTransitions-safe
  const initProjectToc = () => {
    const tocLinks = Array.from(document.querySelectorAll('.toc-link')) as HTMLAnchorElement[];
    const headings = Array.from(document.querySelectorAll('.prose h2, .prose h3')) as HTMLElement[];
    if (!tocLinks.length || !headings.length) return;

    const updateActiveToc = () => {
      let activeHeading: HTMLElement | null = null;
      for (const heading of headings) {
        const rect = heading.getBoundingClientRect();
        if (rect.top <= 140) activeHeading = heading;
      }

      tocLinks.forEach((link) => link.classList.remove('active'));
      if (activeHeading?.id) {
        const activeLink = document.querySelector(`a[href="#${activeHeading.id}"]`);
        if (activeLink) activeLink.classList.add('active');
      }
    };

    const onScroll = (() => {
      let ticking = false;
      return () => {
        if (ticking) return;
        ticking = true;
        requestAnimationFrame(() => {
          updateActiveToc();
          ticking = false;
        });
      };
    })();

    const w = window as any;
    if (w.__projectTocOnScroll) window.removeEventListener('scroll', w.__projectTocOnScroll);
    w.__projectTocOnScroll = onScroll;
    window.addEventListener('scroll', onScroll, { passive: true });

    updateActiveToc();
  };

  initProjectToc();
  document.addEventListener('astro:page-load', initProjectToc);
</script>
