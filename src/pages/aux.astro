---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
import LogoCarousel from '../components/LogoCarousel.astro';

// Images
const fintechImage = '/images/fintech-feature.png';

const skills = {
  "Product Design": ["Design Systems", "User Research", "Design Thinking", "Brand Development"],
  "Technical Execution": ["HTML, CSS & Astro", "Supabase & Postgres", "API Integration", "MCPs"],
  "AI Tools": ["Claude & Cursor", "Bolt & Replit", "Perplexity & Mistral", "ComfyUI"],
  "Design Tools": ["Figma & FigJam", "Adobe Creative Suite", "Affinity", "FlutterFlow"],
  "Soft Skills": ["Leadership", "Training & Mentorship", "Communication", "Cross-functional Collaboration"]
};

const featuredProjects = [
  {
    title: "Financial Institution Digital Transformation",
    summary: "Led UI design and creative direction for a leading South African bank's digital transformation. Built a production design system spanning public web, secure platforms, and mobile app.",
    tags: ["Design Systems", "Enterprise Collaboration", "Technical Constraints", "Longevity"],
    image: fintechImage,
    links: [
      { text: "View Full Case Study", href: "/projects/financial-institution-digital-transformation", variant: "primary" }
    ]
  },
  {
    title: "AI-Accelerated Coffee Directory",
    summary: "Built a complete directory from concept to production in two weeks using AI. Created a custom data pipeline and designed directly in code with Cursor for maximum speed.",
    tags: ["AI Workflow", "Full-stack Development", "Rapid Execution", "Automation"],
    image: "/images/work/findmeacoffee/findmeacoffee-thumbnail.jpeg",
    links: [
      { text: "View Full Case Study", href: "/projects/ai-accelerated-coffee-directory", variant: "primary" },
      { text: "View Live Site", href: "https://findmeacoffee.co.za", variant: "secondary", external: true }
    ]
  },
  {
    title: "AI-Powered WhatsApp Flow Builder",
    summary: "Built an AI-powered visual builder that evolved into a full SaaS platform with AI generation, Figma export, and endpoint simulation. Reduces flow creation time from days to minutes.",
    tags: ["Product Thinking", "Cross-functional Workflow", "AI Integration", "SaaS Platform"],
    image: "/images/work/flows/flows-feature.jpeg",
    links: [
      { text: "View Full Case Study", href: "/projects/ai-powered-whatsapp-flow-builder", variant: "primary" }
    ]
  }
];
---

<Layout 
  title="Nasif Salaam - Product Designer for AUX Studio"
  description="Application page for AUX Studio. Not indexed."
  robots="noindex, nofollow"
>
  <section class="py-10 sm:py-14">
    <div class="container max-w-[1100px] mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-[1fr_320px] gap-8 sm:gap-10 items-center">
        <div class="max-w-[68ch]">
          <div class="text-xs tracking-[0.22em] uppercase text-white/50">AUX Studio</div>
          <h1 class="mt-4 text-4xl sm:text-5xl md:text-[54px] font-medium tracking-[-0.03em] leading-[1.05] text-white/95">
            Hi, I’m Nasif.
            <span class="block text-white/70">Multidisciplinary designer who ships.</span>
          </h1>
          <p class="mt-5 type-lead text-white/75">
            15+ years across brand, product, and systems. I work close to implementation and use AI-accelerated tools to move from early concept to working solution with less handoff and more execution.
          </p>
          <div class="mt-8 flex flex-wrap items-center gap-3">
            <Button href="/contact" text="Schedule a Conversation" variant="primary" />
            <a
              href="/projects"
              class="inline-flex h-12 items-center justify-center rounded-full border border-white/10 bg-white/5 px-6 text-sm font-semibold text-white/80 transition-colors hover:bg-white/10 hover:text-white"
            >
              View work
            </a>
          </div>
        </div>

        <!-- Right-side visual (desktop) -->
        <div class="hidden lg:flex justify-end self-center">
          <img
            src={fintechImage}
            alt=""
            class="w-full max-w-[360px] aspect-square object-cover rounded-3xl"
            loading="eager"
            decoding="async"
          />
        </div>
      </div>
    </div>
  </section>

  <div class="h-px bg-white/10"></div>

  <section class="py-12 sm:py-14">
    <div class="container max-w-[1100px] mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="rounded-2xl border border-white/10 bg-white/[0.03] p-6 sm:p-7">
          <div class="text-xs tracking-[0.22em] uppercase text-white/50 mb-3">Why AUX</div>
          <h2 class="type-h3 text-white/92">A studio that’s future-focused</h2>
          <p class="mt-3 text-sm sm:text-base leading-[1.65] text-white/70">
            I’m looking for a team that’s building with AI, values craft, and cares about people and growth. AUX’s approach and quality of work aligns strongly with how I like to operate.
          </p>
        </div>
        <div class="rounded-2xl border border-white/10 bg-white/[0.03] p-6 sm:p-7">
          <div class="text-xs tracking-[0.22em] uppercase text-white/50 mb-3">Why me</div>
          <h2 class="type-h3 text-white/92">Less handoff, more execution</h2>
          <p class="mt-3 text-sm sm:text-base leading-[1.65] text-white/70">
            I can contribute across brand, UI/UX, design systems, and rapid prototyping. I’m comfortable owning the full loop—strategy, design, and build—so outcomes ship faster.
          </p>
        </div>
      </div>
    </div>
  </section>

  <div class="h-px bg-white/10"></div>

  <section class="py-12 sm:py-14 overflow-hidden">
    <div class="container max-w-[1100px] mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-[68ch]">
        <div class="text-xs tracking-[0.22em] uppercase text-white/50 mb-3">How I use AI</div>
        <h2 class="type-h2 text-white/90">AI-accelerated, not AI-dependent</h2>
        <p class="mt-4 text-sm sm:text-base leading-[1.65] text-white/70">
          I use AI for research, planning, rapid iteration, and implementation—while keeping judgment, craft, and product thinking in the loop. The goal is speed with quality.
        </p>
      </div>
    </div>
    <div class="mt-10">
      <LogoCarousel speed={40} />
    </div>
  </section>

  <div class="h-px bg-white/10"></div>

  <section class="py-12 sm:py-14">
    <div class="container max-w-[1100px] mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-xs tracking-[0.22em] uppercase text-white/50 mb-3">Work</div>
      <h2 class="type-h2 text-white/90">Featured projects</h2>

      <div class="mt-10 grid grid-cols-1 lg:grid-cols-3 gap-8 md:gap-10">
        {featuredProjects.map((project, index) => (
          <div class="rounded-2xl border border-white/10 bg-white/[0.03] overflow-hidden transition-all hover:bg-white/[0.05] hover:border-white/20">
            <div class="aspect-video overflow-hidden bg-white/5">
              <img
                src={project.image}
                alt={project.title}
                class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
                loading={index === 0 ? 'eager' : 'lazy'}
                decoding="async"
              />
            </div>
            <div class="p-5">
              <h3 class="text-base sm:text-lg font-semibold text-white/92">{project.title}</h3>
              <p class="mt-2 text-sm text-white/70">{project.summary}</p>
              <div class="mt-4 flex flex-wrap gap-2">
                {project.tags.map((tag) => (
                  <span class="text-xs px-2.5 py-1 rounded-full border border-white/10 bg-white/5 text-white/70">
                    {tag}
                  </span>
                ))}
              </div>
              <div class="mt-5 flex flex-wrap gap-3">
                {project.links.map((link) => (
                  <Button
                    href={link.href}
                    text={link.text}
                    variant={link.variant as 'primary' | 'secondary'}
                    external={(link as any).external}
                    class="!h-10 !px-5"
                  />
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <div class="h-px bg-white/10"></div>

  <section class="py-12 sm:py-14">
    <div class="container max-w-[1100px] mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-xs tracking-[0.22em] uppercase text-white/50 mb-3">Skills</div>
      <h2 class="type-h2 text-white/90">Capabilities</h2>

      <div class="mt-8 rounded-2xl border border-white/10 bg-white/[0.03] p-6 sm:p-7">
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8">
          {Object.entries(skills).map(([category, items]) => (
            <div>
              <div class="text-sm font-semibold text-white/85 mb-3">{category}</div>
              <div class="flex flex-wrap gap-2">
                {items.map((item) => (
                  <span class="text-xs px-2.5 py-1 rounded-full border border-white/10 bg-white/5 text-white/70">
                    {item}
                  </span>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <section class="pb-14 sm:pb-20">
    <div class="container max-w-[1100px] mx-auto px-4 sm:px-6 lg:px-8">
      <div class="rounded-3xl border border-white/10 bg-[#121212]/70 backdrop-blur-xl p-8 sm:p-10">
        <div class="max-w-[72ch]">
          <h2 class="type-h2 text-white/92">Let’s talk.</h2>
          <p class="mt-3 text-base sm:text-lg leading-[1.65] text-white/70">
            If AUX is looking for someone who can design, build, and iterate quickly with AI-accelerated workflows, I’d love to chat.
          </p>
          <div class="mt-6">
            <Button href="/contact" text="Schedule a Conversation" variant="primary" />
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
