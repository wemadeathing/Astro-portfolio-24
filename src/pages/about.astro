---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import profileImage from '../images/NS-profile-2.png';

const expertise = [
  {
    title: 'Strategic Design & Rapid Building',
    description: 'Combining 15+ years of design thinking with rapid prototyping capabilities. I plan strategically in Figma then build functional products using modern frameworks and AI-augmented development.',
    icon: 'M2 6a2 2 0 012-2h16a2 2 0 012 2v12a2 2 0 01-2 2H4a2 2 0 01-2-2V6zm3.5 1a1.5 1.5 0 100 3 1.5 1.5 0 000-3zm9 6.75l-2.5-3-3 4-1.5-2-3.5 4.5h14l-3.5-3.5z'
  },
  {
    title: 'AI Training & Implementation',
    description: 'Teaching teams how to use AI practically in their workflows while helping businesses implement AI solutions that enhance productivity without replacing human creativity.',
    icon: 'M13 2L3 14h9l-1 8 10-12h-9l1-8z'
  },
  {
    title: 'Functional Prototyping',
    description: 'Building working prototypes that help validate business ideas quickly. I can integrate APIs, authentication, databases, and real functionality - not just static designs.',
    icon: 'M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zm0 8a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zm12 0a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z'
  },
  {
    title: 'Learning & Knowledge Sharing',
    description: 'Constantly learning new tools and technologies while sharing knowledge with others. I believe in building while learning and helping teams adopt modern development approaches.',
    icon: 'M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4'
  }
];

const skills = {
  design: [
    'Design Thinking',
    'User Research',
    'Strategic Planning',
    'Design Systems'
  ],
  building: [
    'Rapid Prototyping',
    'API Integration',
    'Database Design',
    'Authentication Systems'
  ],
  aiTools: [
    'Cursor & Claude Code',
    'Bolt, v0, Lovable',
    'AI-Assisted Development',
    'Prompt Engineering'
  ],
  frameworks: [
    'React & Astro',
    'Tailwind CSS',
    'Supabase & Neon',
    'Modern Tech Stacks'
  ],
  traditional: [
    'Figma',
    'Adobe Suite',
    'Brand Design',
    'Visual Communication'
  ]
};

const experience = [
  {
    role: 'AI Training & Rapid Building',
    company: 'Nexevo & Personal Projects',
    period: '2025 - Present',
    description: 'Training teams to use AI practically while building functional prototypes for businesses. Creating working applications with modern frameworks, AI integration, and real-world functionality.'
  },
  {
    role: 'Lead Designer',
    company: 'Immersion Group',
    period: '2022 - Present',
    description: 'Leading design innovation and strategic thinking. Developed expertise in translating user needs into functional solutions while exploring emerging technologies and development tools.'
  },
  {
    role: 'Digital Designer',
    company: 'Machete Creative',
    period: '2019 - 2021',
    description: 'Created comprehensive digital solutions including UI designs, websites, and digital assets. Conducted user research and implemented design strategies for optimal user experience.'
  },
  {
    role: 'Visual Designer',
    company: 'Freelance',
    period: '2014 - 2018',
    description: 'Collaborated with diverse clients on branding, digital design, and web development projects. Managed end-to-end design processes from concept to implementation.'
  },
  {
    role: 'Senior Graphic Designer',
    company: 'Musica & Clicks',
    period: '2009 - 2012',
    description: 'Designed promotional campaigns and internal marketing material. Managed teams and oversaw complete design processes, building strong foundations in visual communication and project management.'
  }
];
---

<Layout title="About Me | Strategic Designer & Rapid Builder">
  <div class="container max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-32">
    <section class="mb-16 flex flex-col md:flex-row gap-12 items-start">
      <div class="md:w-1/4">
        <Image 
          src={profileImage}
          alt="Nasif Salaam"
          class="rounded-2xl w-full max-w-[200px] shadow-lg border border-secondary"
        />
      </div>
      <div class="md:w-3/4">
        <h1 class="text-4xl font-bold mb-6 text-foreground">About Me</h1>
        <p class="text-xl text-muted-foreground mb-8">
          With 15+ years of design experience, I've evolved from traditional visual design into someone who can both strategically plan and rapidly build functional products. My approach combines solid design thinking with modern development capabilities, using AI to augment rather than replace human creativity.
        </p>
        <p class="text-xl text-muted-foreground mb-8">
          This year I've been training teams to use AI practically in their workflows while building rapid prototypes for businesses looking to validate ideas quickly. I can plan strategically, then build working applications with real APIs, authentication, and databases - making design decisions during development that most coders can't.
        </p>
        <p class="text-xl text-muted-foreground">
          What excites me is helping teams move from concept to working product without getting stuck in endless planning cycles. I believe in learning by building and sharing knowledge openly. Whether it's training someone to use AI tools effectively or building a functional prototype in a week, I focus on practical outcomes that solve real problems.
        </p>
      </div>
    </section>

    <div class="w-full h-[2px] mb-16 bg-gradient-to-r from-primary/0 via-primary/50 to-primary/0"></div>

    <section class="mb-32">
      <h2 class="text-2xl font-bold mb-8 text-foreground">What I Do Now</h2>
      <div class="grid md:grid-cols-2 gap-8">
        {expertise.map((item) => (
          <div class="p-6 rounded-xl bg-secondary/50 backdrop-blur-sm border border-secondary">
            <div class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center mb-4">
              <svg 
                xmlns="http://www.w3.org/2000/svg" 
                class="w-6 h-6 text-primary" 
                viewBox="0 0 24 24" 
                fill="none" 
                stroke="currentColor" 
                stroke-width="2"
              >
                <path d={item.icon} />
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-3 text-foreground">{item.title}</h3>
            <p class="text-muted-foreground">{item.description}</p>
          </div>
        ))}
      </div>
    </section>

    <section class="mb-32">
      <h2 class="text-2xl font-bold mb-8 text-foreground">Skills & Capabilities</h2>
      <div class="grid grid-cols-2 md:grid-cols-5 gap-8">
        <div>
          <h3 class="text-lg font-semibold mb-4 text-foreground">Design Foundation</h3>
          <ul class="space-y-2">
            {skills.design.map((skill) => (
              <li class="text-muted-foreground">{skill}</li>
            ))}
          </ul>
        </div>
        <div>
          <h3 class="text-lg font-semibold mb-4 text-foreground">Rapid Building</h3>
          <ul class="space-y-2">
            {skills.building.map((skill) => (
              <li class="text-muted-foreground">{skill}</li>
            ))}
          </ul>
        </div>
        <div>
          <h3 class="text-lg font-semibold mb-4 text-foreground">AI Tools</h3>
          <ul class="space-y-2">
            {skills.aiTools.map((skill) => (
              <li class="text-muted-foreground">{skill}</li>
            ))}
          </ul>
        </div>
        <div>
          <h3 class="text-lg font-semibold mb-4 text-foreground">Tech Stack</h3>
          <ul class="space-y-2">
            {skills.frameworks.map((skill) => (
              <li class="text-muted-foreground">{skill}</li>
            ))}
          </ul>
        </div>
        <div>
          <h3 class="text-lg font-semibold mb-4 text-foreground">Traditional Tools</h3>
          <ul class="space-y-2">
            {skills.traditional.map((skill) => (
              <li class="text-muted-foreground">{skill}</li>
            ))}
          </ul>
        </div>
      </div>
    </section>

    <section class="mb-32">
      <h2 class="text-2xl font-bold mb-6 text-foreground">Professional Journey</h2>
      <div class="space-y-8">
        {experience.map((item) => (
          <div class="border-l-2 border-primary/20 pl-6 relative">
            <div class="absolute w-3 h-3 bg-primary rounded-full -left-[7px] top-2"></div>
            <h3 class="text-xl font-semibold text-foreground">{item.role}</h3>
            <p class="text-muted-foreground">{item.company} â€¢ {item.period}</p>
            <p class="mt-2 text-muted-foreground">{item.description}</p>
          </div>
        ))}
      </div>
    </section>

    
  </div>
</Layout>