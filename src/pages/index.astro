---
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import HeroAnimation from '../components/HeroAnimation.astro';
import { getCollection } from 'astro:content';

const projects = await getCollection('projects');
const featuredProjects = projects.filter(project => project.data.featured);
---

<Layout title="Nasif Salaam | Visual Designer & AI Enablement Specialist">
  <div class="absolute inset-0 h-screen bg-gradient-hero -z-10"></div>
  <HeroAnimation />
  <section class="relative min-h-[70vh] flex items-center">
    <div class="container max-w-5xl mx-auto px-4 pt-32 relative">
      <div class="max-w-2xl animate-slide-up">
        <span class="text-sm font-medium text-primary mb-3 block">Visual Designer & AI Enablement Specialist</span>
        <h1 class="text-5xl font-bold leading-tight mb-6 text-foreground">
          Building Tomorrow's Digital Experiences Today
        </h1>
        <p class="text-lg text-muted-foreground mb-8">
          I transform ideas into intuitive digital experiences by blending visual design expertise with modern development tools and AI capabilities. My approach combines creative problem-solving with technical innovation to build solutions that drive results.
        </p>
        <div class="flex gap-4">
          <a
            href="/contact"
            class="inline-flex h-12 items-center justify-center rounded-full bg-primary px-8 text-sm font-medium text-primary-foreground transition-colors hover:bg-primary/80"
          >
            Start Your Project
          </a>
          <a
            href="/about"
            class="inline-flex h-12 items-center justify-center rounded-full bg-secondary px-8 text-sm font-medium text-secondary-foreground transition-colors hover:bg-secondary/80"
          >
            My Experience
          </a>
        </div>
      </div>
    </div>
  </section>

  <section class="py-28 bg-background relative">
    <div class="container max-w-5xl mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-32">
        <div class="p-6 rounded-xl bg-secondary/50 backdrop-blur-sm border border-secondary">
          <div class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 19l7-7 3 3-7 7-3-3z"/>
              <path d="M18 13l-1.5-7.5L2 2l3.5 14.5L13 18l5-5z"/>
              <path d="M2 2l7.586 7.586"/>
              <circle cx="11" cy="11" r="2"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">Design & Development</h3>
          <p class="text-muted-foreground">Creating intuitive interfaces using modern development tools and frameworks. From concept to deployment, I build solutions that enhance user engagement</p>
        </div>
        <div class="p-6 rounded-xl bg-secondary/50 backdrop-blur-sm border border-secondary">
          <div class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 2a4 4 0 00-4 4v2H6a2 2 0 00-2 2v8a2 2 0 002 2h12a2 2 0 002-2v-8a2 2 0 00-2-2h-2V6a4 4 0 00-4-4z"/>
              <path d="M9 12h6"/>
              <path d="M12 9v6"/>
              <path d="M9 18h6"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">AI Implementation</h3>
          <p class="text-muted-foreground">Leveraging AI technologies to streamline workflows and enhance digital solutions. I help teams implement AI tools effectively to boost productivity and innovation</p>
        </div>
        <div class="p-6 rounded-xl bg-secondary/50 backdrop-blur-sm border border-secondary">
          <div class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M4.5 16.5c-1.5 1.26-2 5-2 5s3.74-.5 5-2c.71-.84.7-2.13-.09-2.91a2.18 2.18 0 0 0-2.91-.09z"/>
              <path d="M12 15l-3-3a22 22 0 0 1 2-3.95A12.88 12.88 0 0 1 22 2c0 2.72-.78 7.5-6 11a22.35 22.35 0 0 1-4 2z"/>
              <path d="M9 12H4s.55-3.03 2-4c1.62-1.08 5 0 5 0"/>
              <path d="M12 15v5s3.03-.55 4-2c1.08-1.62 0-5 0-5"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">Creative Problem-Solving</h3>
          <p class="text-muted-foreground">Transforming complex challenges into elegant solutions through a combination of design thinking and technical expertise</p>
        </div>
      </div>

      <h2 class="text-3xl font-bold mb-16 text-foreground">Featured Projects</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 stagger-children">
        {featuredProjects.map((project) => (
          <ProjectCard
            title={project.data.title}
            description={project.data.description}
            image={project.data.image}
            tags={project.data.tags}
            slug={project.slug}
          />
        ))}
      </div>
    </div>
  </section>

  <section class="pt-28 bg-secondary/20 -mb-32">
    <div class="container max-w-5xl mx-auto px-4">
      <h2 class="text-3xl font-bold mb-4 text-foreground">Ready to Transform Your Digital Presence?</h2>
      <p class="text-lg text-muted-foreground mb-8 max-w-2xl">
        Let's collaborate to create innovative solutions that elevate your business through design and AI integration.
      </p>
      <a
        href="/contact"
        class="inline-flex h-12 items-center justify-center rounded-full bg-primary px-8 text-sm font-medium text-primary-foreground transition-colors hover:bg-primary/80 mb-16"
      >
        Get in Touch
      </a>
    </div>
  </section>
</Layout>